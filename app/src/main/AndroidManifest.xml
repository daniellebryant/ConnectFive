<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.augustana.csc490.individualgame" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HowToActivity"
            android:label="@string/title_activity_how_to" >
            <intent-filter>
                <action android:name="android.intent.action.HowTo" />
                <category android:name="android.intent.category.OPENABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameOptionsActivity"
            android:label="@string/title_activity_game_options" >
            <intent-filter>
                <action android:name="android.intent.action.GameOptions" />
                <category android:name="android.intent.category.OPENABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameBoardActivity"
            android:label="@string/title_activity_game_board" >
        </activity>
    </application>

</manifest>
